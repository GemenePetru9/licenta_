<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/userCurrent"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_green_dark"
        android:padding="5sp"
        android:text="Welcome, Nume Prenume"
        android:textSize="24sp" />

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userCurrent"
        android:layout_marginTop="-8dp"
        android:background="#ffffff"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textViewSapt"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="@android:color/holo_green_dark"
        android:paddingLeft="10dp"
        android:text="TextView" />

    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="65dp"
        android:layout_height="324dp"

        android:layout_alignStart="@+id/textViewSapt"
        android:layout_below="@+id/textViewSapt"
        android:layout_marginTop="15dp"
        android:columnCount="7"
        android:visibility="visible">


        <TextView
            android:id="@+id/textViewMun"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Mun"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewTue"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="1"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Tue"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewWed"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="2"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Wed"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewThu"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="3"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Thu"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewFri"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="4"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Fri"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSat"
            android:layout_width="60dp"
            android:layout_height="39dp"

            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_row="5"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Sat"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewSun"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="6"
            android:background="@android:color/holo_green_dark"
            android:padding="2sp"
            android:text="Sun"
            android:textAlignment="center"
            android:textSize="24sp" />


    </GridLayout>

    <GridView
        android:id="@+id/gridViewWeek"
        android:layout_width="211dp"
        android:layout_height="421dp"

        android:layout_below="@+id/textViewSapt"
        android:layout_centerHorizontal="true"
        android:horizontalSpacing="@dimen/elementMargin"
        android:verticalSpacing="@dimen/elementMargin"
        android:visibility="visible" />

</RelativeLayout>